<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Majors"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnAddMajor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Major"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Majors"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/listViewMajors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvEmptyMajorList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No majors found. Add some majors to get started!"
        android:textSize="16sp"
        android:textColor="#757575"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout> 